.link
	&_styles
		&_no
			color inherit
			text-decoration none

ul
	margin 0
	padding 0
	list-style none

*,
*:before,
*:after
	box-sizing border-box
	margin 0

#__nuxt,
#__layout
	height 100%

.icon
	max-width 100%
	max-height 100%

.page
	height 100%
	min-height 100%

	&__body
		overflow hidden auto
		height 100%
		min-height 100%
		color var(--primary-text)
		font-family 'Roboto', sans-serif
		font-size 14px
		background-color var(--primary-background)

		&_overflow
			&_hidden
				overflow hidden

	&__container
		display flex
		align-items center
		flex-direction column
		height 100%

	&__header
		position fixed
		top 0
		right 0
		left 0
		z-index 99
		background var(--secondary-background)

	&__content
		flex-grow 1
		width 100%
		max-width 1280px
		max-height 100%
		padding 0 10px
		padding-top calc(46px + 20px)
		padding-bottom 20px
