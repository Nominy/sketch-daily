.side-menu
	display block
	width 100%

	&__timer
		margin-bottom 8px
		padding 8px 4px
		background var(--secondary-background)
		border-radius 4px

	&__timer-text
		margin 0 2px 6px
		padding 4px
		font-size 28px
		font-weight 500
		text-align center
		background #303030
		border-radius 4px

	&__timer-controls
		display flex

		& ^[0]__button
			margin 0 3px

	&__button
		display inline-block
		flex-grow 1
		height 32px
		padding 4px 0
		color #ffffff
		font-size 15px
		line-height 24px
		text-align center
		cursor pointer
		background #404040
		border none
		border-radius 4px
		outline none

		&:hover
			background darken(#404040, 20%)

		&:active
			background darken(#404040, 30%)

		&:disabled
			color #404040
			cursor not-allowed
			background #303030

		&_width
			&_full
				width 100%
				margin 0

		&_color
			&_red
				background #ef5350

				&:hover
					background darken(#ef5350, 5%)

				&:active
					background darken(#ef5350, 10%)

			&_green
				background #4fb75c

				&:hover
					background darken(#4fb75c, 5%)

				&:active
					background darken(#4fb75c, 10%)

	&__button-icon
		width 24px
		height 24px
		fill currentColor

	&__settings
		background var(--secondary-background)
		border-radius 4px

	&__settings-title
		margin-bottom 8px
		padding 8px 4px
		color #ffffff
		font-size 18px
		text-align center
		border-bottom 1px solid #101010

	&__field
		display flex
		flex-direction row
		margin-bottom 8px
		padding 8px

	&__field-label
		color #F5F5F5
		font-size 16px

	&__field-content
		flex-grow 1
		margin-left 16px

	&__select-wrapper
		display flex
		align-items flex-end

		&:not(:last-child)
			margin-bottom 8px

	&__select
		width 100%
		padding 4px 8px
		color #ffffff
		background #303030
		border 1px solid #303030
		border-radius 4px

	&__select-text
		width 40px
		margin-left 8px

	&__settings-buttons
		display flex

		& ^[0]__button
			width 50%

			&:first-child
				margin-right 6px
