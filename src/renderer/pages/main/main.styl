.page-main
	position relative
	display flex
	flex-direction column
	height 100%
	max-height 100%

	+above(size-m)
		flex-direction row

	&__menu
		flex-shrink 0
		width 100%

		+above(size-m)
			width 260px

	&__slides-counter
		position absolute
		right 0
		left 270px
		bottom 0
		font-size 16px
		line-height 24px
		text-align center

	&__content
		position relative
		top 0
		display flex
		justify-content center
		align-items center
		width 100%
		height calc(100% - 32px)
		margin 0
		background-repeat no-repeat
		background-position center top
		background-size contain

		+above(size-m)
			margin-left 10px
			background-color #202020
			background-position center
			border-radius 4px

	&__images-container
		position absolute
		top 0
		right 0
		left 0
		display flex
		overflow hidden
		justify-content center
		flex-wrap wrap
		height 100%
		max-height 100%

	&__image
		width 50%
		height 50%
		object-fit contain

		&_number
			&_1
				object-position right bottom

			&_2
				object-position left bottom

			&_3
				object-position right top

			&_4
				object-position left top

		&_size
			&_full
				width 100%
				height 100%

	&__preview
		position absolute
		top 0
		right 0
		left 0
		display flex
		overflow hidden
		justify-content center
		flex-wrap wrap
		max-height 100%

	&__preview-shader
		position absolute
		top 0
		right 0
		left 0
		bottom 0
		z-index 10
		background rgba(0, 0, 0, .8)

	&__preview-item
		width 120px
		height 120px
		margin 4px
		border-radius 4px
		object-fit cover

		+above(size-l)
			width 200px
			height 200px

	&__start
		position relative
		z-index 20
		display flex
		flex-direction column
		padding 20px
		background var(--secondary-background)
		border-radius 4px

	&__settings
		display flex
		flex-direction column
		margin-bottom 24px

	&__settings-field
		display flex
		align-items flex-end
		min-height 28px

		&:not(:last-child)
			margin-bottom 8px

	&__settings-field
		& > *:last-child
			flex-grow 1
			margin-left 12px

	&__start-button
		align-self flex-end
