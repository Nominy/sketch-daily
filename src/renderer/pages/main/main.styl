.page-main
	display flex
	flex-direction column
	height 100%
	max-height 100%

	+above(size-m)
		flex-direction row

	&__menu
		flex-shrink 0
		width 100%

		+above(size-m)
			width 260px

	&__image
		width 100%
		height 100%
		margin 0
		background-repeat no-repeat
		background-position center top
		background-size contain

		+above(size-m)
			margin-left 10px
			background-color #202020
			background-position center
			border-radius 4px
