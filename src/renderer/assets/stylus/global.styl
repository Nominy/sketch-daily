.link
	&_styles
		&_no
			color inherit
			text-decoration none

ul
	margin 0
	padding 0
	list-style none

*,
*:before,
*:after
	box-sizing border-box
	margin 0
	user-select none

#__nuxt,
#__layout
	height 100%

.icon
	max-width 100%
	max-height 100%

.page
	height 100%
	min-height 100%

	&__body
		overflow hidden
		height 100%
		min-height 100%
		color var(--primary-text)
		font-family 'Roboto', sans-serif
		font-size 14px
		background-color var(--primary-background)

		&_overflow
			&_hidden
				overflow hidden

	&__container
		display flex
		align-items center
		flex-direction column
		height 100%

	&__app-header
		position fixed
		top 0
		right 0
		left 0
		z-index 9999
		background #111111

	&__header
		position fixed
		top 22px
		right 0
		left 0
		z-index 99
		background var(--secondary-background)

	&__content
		overflow-y auto
		width 100%
		height 100%
		max-height 100%
		margin-top calc(22px + 46px)
		padding-top 10px
		padding-bottom 20px

::-webkit-scrollbar
	width 8px
	background transparent

::-webkit-scrollbar-thumb
	background rgba(255, 255, 255, .1)

.container
	flex-grow 1
	width 100%
	max-width 1440px
	height 100%
	max-height 100%
	margin 0 auto
	padding-right 10px
	padding-left 10px

	+above(size-s)
		padding-right 30px
		padding-left 30px

.select
	display block
	padding 4px 8px
	color #ffffff
	background #303030
	border 1px solid #303030
	border-radius 4px
	outline none

	&_width
		&_full
			width 100%
